<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
	android:gravity="center"
  android:orientation="vertical"
  android:transitionName="mainItemLayout"
	android:id="@+id/activity_detailMainLinearLayout"
	android:background="@android:color/black">
          
      <ImageView 
          android:transitionName="imageRepresentation"
          android:id="@+id/list_itemImageView"
          android:layout_width="100dp"
          android:layout_height="100dp"/>

      <TextView 
          android:transitionName="name_transition"
          android:textStyle="bold"
          android:layout_marginTop="50dp"
          android:textColor="#ffffffff"
          android:textSize="30sp"
          android:id="@+id/list_itemTextViewName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView 
          android:textColor="#ffffffff"
          android:transitionName="description_transition"
          android:gravity="center"
          android:textStyle="italic"
          android:layout_marginTop="50dp"
          android:textSize="20sp"
          android:id="@+id/list_itemTextViewDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      
</LinearLayout>
